@using System.Web.UI.WebControls
@model hpMvc.Models.EnrollmentContentModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Enrollment Content</h2>

@using (Html.BeginForm("Save", "Enrollment", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <div>
        @Html.LabelFor(x=>x.EnrollmentContent, "Enrollment Content:")
        <br/>
        @Html.TextAreaFor(x=>x.EnrollmentContent, new{ @cols=100, @rows=15})
        <br/><br/>
        @Html.LabelFor(x=>x.AnnouncementContent, "Announcement Content:")
        <br/>
        @Html.TextAreaFor(x => x.AnnouncementContent, new { @cols = 100, @rows = 15 })
        <br/><br/>
        <label>Upload image: </label>
        <input type="file" name="file"/>    
        <br /><br />
        <input type="submit" id="btnSubmit" value="Submit" />
    </div>
}

