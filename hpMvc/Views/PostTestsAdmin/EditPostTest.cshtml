@model List<hpMvc.Models.PostTest>

@{
    ViewBag.Title = "EditPostTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Post Test</h2>
<link href="@Url.Content("~/Content/postTestEdit.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/postTestEdit.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    
        <br />
        <p>
            Select the tests completed by <strong>  </strong>  
        </p>      
        <input type="hidden" name="Name" value="" />
        <input type="hidden" name="ID" value="" />
        <div>
            @for (int i = 0; i < (@Model.Count()) - 1; i++)
            {
                @Html.HiddenFor(m => @Model[i].ID)
                @Html.CheckBoxFor(m => @Model[i].IsCompleted)
                <span class = "lbl1" >@Model[i].Name </span> 
                <span class="spanDate">
                    <span>Date Completed:</span>
                    @Html.TextBoxFor(m => @Model[i].sDateCompleted)
                </span>
                <br/>    
            }
        </div>
        
        <p>
            <input id="save" type="button" value="Save" />
        </p>
    
}

<div>
    @Html.ActionLink("Back to Post Tests Admin", "Index")
</div>
