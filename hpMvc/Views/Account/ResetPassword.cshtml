@model hpMvc.Models.ResetPasswordModel

@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reset Password: @ViewBag.User</h2>
The password must be 6 characters in length and must contain at least 1 capital letter and 1 number
@using (Html.BeginForm("ResetPassword", "Admin", FormMethod.Post))
{
    <input type="hidden" id="userName" name="userName" value="@ViewBag.User" />
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Reset Your Password</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewPassword)
            @Html.ValidationMessageFor(model => model.NewPassword)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConfirmPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConfirmPassword)
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>

        <p>
            <input id="btnSave" type="button" value="Save" /> <img alt="" id="waitGif" src="@Url.Content("~/Content/images/wait.gif")" />
        </p>

    </fieldset>
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/ResetPassword.js")" type="text/javascript"></script>
