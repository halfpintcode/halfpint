@{
    ViewBag.Title = "Staff - Notifications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style rel="stylesheet" type="text/css">
    ul
    {
        list-style-type: square;
        margin: 25px;
        padding: 5px;
    }
</style>
<h2>
    Staff Notifications</h2>
<div id="divSelects">
    <span class="spnMain">Select a site:&nbsp;</span> @Html.DropDownList("Sites")
    <br />
    <span class="spnMain">Select a member:&nbsp;</span>@Html.DropDownList("Users")
    <br />
    <input id="SiteID" name="SiteID" type="hidden" value='@ViewBag.Site' />
    <input id="UserID" name="UserID" type="hidden" value='@ViewBag.User' />
    <input id="IsValid" name="IsValid" type="hidden" value='@ViewBag.IsValid' />
</div>
<div id="staffInfo">
    @if (ViewBag.ShowPartial == "true")
    {
        { Html.RenderPartial("StaffSubscriptionsPartial"); }
    }
</div>
<script src="@Url.Content("~/Scripts/staffSubscribe.js")" type="text/javascript"></script>
