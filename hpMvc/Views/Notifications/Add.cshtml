@model hpMvc.Models.NotificationEvent
@{
    ViewBag.Title = "Add Notification Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Add Notification Event</h2>
@using (Html.BeginForm("Add", "Notifications", FormMethod.Post))
{
    <div>
        @Html.ValidationSummary()
    </div>
    
    <fieldset>
        <legend>Event Details</legend>
        <div>
            <span class="lbleditor">Name:</span> <span class="col2">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </span>
        </div>
        <div>
            <span class="lbleditor">Active:</span> <span class="col2">
                @Html.EditorFor(model => model.Active)
            </span>
        </div>
        <p>
            <input type="submit" id="btnSubmit" value="Submit" />
        </p>
    </fieldset>
    <div>
        @Html.ActionLink("Back to Notification Events", "Events")
    </div>
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
