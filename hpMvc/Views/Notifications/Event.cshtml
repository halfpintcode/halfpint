@model hpMvc.Models.NotificationEvent
@{
    ViewBag.Title = "Edit Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>
    Event: @Model.Name</h3>
@using (Html.BeginForm())
{
    <div>
        @Html.ValidationSummary()
    </div>
    
    <fieldset>
        <legend>Site Details</legend>
        <div>
            <span class="lbleditor">Internal Id:</span> <span class="col2">@Html.DisplayFor(model => model.Id)
            </span>
        </div>
        <div>
            <span class="lbleditor">Name:</span> <span class="col2">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </span>
        </div>
        <div>
            <span class="lbleditor">Active:</span> <span class="col2">
                @Html.EditorFor(model => model.Active)
            </span>
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to Notification Events", "Events")
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>