@model hpMvc.Models.SensorModel

@{
    ViewBag.Title = "Sensor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sensor</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Enter the following sendor information</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MonitorDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MonitorDate)
            @Html.ValidationMessageFor(model => model.MonitorDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MonitorTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MonitorTime)
            @Html.ValidationMessageFor(model => model.MonitorTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MonitorId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MonitorId)
            @Html.ValidationMessageFor(model => model.MonitorId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TransmitterId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TransmitterId)
            @Html.ValidationMessageFor(model => model.TransmitterId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SensorLot)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SensorLot)
            @Html.ValidationMessageFor(model => model.SensorLot)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InserterFirstName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InserterFirstName)
            @Html.ValidationMessageFor(model => model.InserterFirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InserterLastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InserterLastName)
            @Html.ValidationMessageFor(model => model.InserterLastName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SensorLocation)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SensorLocation)
            @Html.ValidationMessageFor(model => model.SensorLocation)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SensorReason)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SensorReason)
            @Html.ValidationMessageFor(model => model.SensorReason)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
