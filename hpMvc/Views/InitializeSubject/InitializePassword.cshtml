@{
    ViewBag.Title = "Initialization Password Assignment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Initialization Password Assignment</h2>

<form action="" method="post" id="mainForm">
    
    <br />    
    <span class="warning hpProd">Warning! This site is for actual subjects only. For TESTING, use this site: <a href="http://HalfpintStudy.org/hpTest">HalfpintStudy.Org/hpTest</a></span>
    <fieldset>                  

        <p>
            <label for="StudyID">Study ID</label>
            <input type="text" id="StudyID" name="StudyID" size="25" />
        </p>
        <div class="hpProd">
            <p>
			    <label for="ConsentDate">Consent Date</label>
			    <input type="text" id="ConsentDate" name="ConsentDate" size="25"  />
		    </p>
            <p>
                <label for="Consent">Consent Time</label>
                <input type="text" id="ConsentTime" name="ConsentTime" size="10" />
            </p>
        </div>

        <div id="divPassword">
            <p>
                Click the link below to print the initialization password and place in front of resource binder at subject bedside.
            </p>
            <p>
                <a href="#" id="lnkPrintPage"> Printer Friendly Webpage</a> 
            </p>        
        </div>
        <p>
            <input type="button" id="btnSubmit" value="Submit" />
            &nbsp;&nbsp;&nbsp; 
            <input type="button" id="btnCancel" value="Cancel" />
        </p>
    </fieldset>
    <div>
        @Html.ActionLink("Start Initialization", "Initialize", "InitializeSubject")
        <br />
        @Html.ActionLink("Staff Home", "Index", "Staff")
    </div>    
</form>
<link href="@Url.Content("~/Content/PrintIntiializePassword.css")" rel="stylesheet" type="text/css" media="print" />
<link href="@Url.Content("~/Content/InitializePassword.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.maskedinput-1.3.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/InitializePassword.js")" type="text/javascript"></script>


