@{
    ViewBag.Title = "Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/Posttest.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/PostTest.js")" type="text/javascript"></script>

<h2>Online Videos and Testing - Overview</h2>
<hr />
<form action="" method="post">    
    @Html.Hidden("name", (object)@ViewBag.Name)
    @Html.Hidden("id", (object)@ViewBag.ID)
    @Html.Hidden("test", (object)@ViewBag.Test)
    @Html.Hidden("completed", (object)@ViewBag.Completed)
    <p id="testIntro">
        After viewing the video, click on the 'Take the test' link (below the video). You must answer all questions correctly.
    </p>
    @*<iframe src="//player.vimeo.com/video/37407188?title=0&amp;byline=0&amp;portrait=0" 
			width="533" height="300" 
			frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen>
	</iframe>*@
    <iframe src="https://player.vimeo.com/video/139504044" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
	<p>
		Module 1: Half Pint Study Overview
	</p>							
	<a href="" id="showHideTest">Take the test</a>
    <div id="testForm">
        <div class="question">
            1) <span class="questionText">If I am caring for a patient who has been consented to HALF-PINT but not yet randomized, what do I do </span>
            <br /> <span class="questionTextOver">if the patient has a blood glucose of > 150 mg/dL (8.3 mmol/L)?</span>
        </div>
        <br />
        <div class="answer">
            <span class="spanswer"> a) </span> <input type="radio" name="question1" value="a" />  <span>Nothing, this is anticipated</span>            
        </div>
        <br />
        <div class="answer">  
            <span class="spanswer"> b) </span> <input type="radio" name="question1" value="b" />  Contact the HALF-PINT Study Coordinator
        </div>
        <br />
        <div class="answer">
            <span class="spanswer"> c) </span> <input type="radio" name="question1" value="c" />  Confirm the measurement with another BG check on your unit’s standard blood glucose testing 
            <br /><span class="answerTextOver">method. If this is also ≥ 150 mg/dL (8.3 mmol/L) the patient will be randomized.</span>
        </div>
        <br />
        <div class="question">
            2) <span class="questionText">There is overwhelming evidence that tight glycemic control to a range of 80-110 mg/dL (4.4-6.1 mmol/L) is</span> 
               <br /><span class="questionTextOver"> ideal in the pediatric ICU population</span>
        </div>
        <br />
        <div class="answer">
            <input type="radio" name="question2" value="Yes" /> True            
        </div>
        <br />
        <div class="answer">  
            <input type="radio" name="question2" value="No" /> False
        </div>
        <br />
        <div class="question">
            3) <span class="questionText">After randomization, what glucose meter can I use to enter blood glucose measurements into CHECKS</span><br />
			   <span class="questionTextOver"> (the study insulin infusion spreadsheet)?</span>
        </div>
        <br />
        <div class="answer">
            <span class="spanswer"> a) </span> <input type="radio" name="question3" value="a" />  Nova StatStrip            
        </div>
        <br />
        <div class="answer">  
            <span class="spanswer"> b) </span> <input type="radio" name="question3" value="b" />  Hospital glucose meter
        </div>
        <br />
        <div class="answer">
            <span class="spanswer"> c) </span> <input type="radio" name="question3" value="c" />  Either of the above  
        </div>
        <br />
        <input type="button" id="btnSubmit" value="Submit Answers" /> 
    </div>
    <br />
    @Html.ActionLink("Back to tests menu", "Initialize", new { Controller = "PostTests", id = @ViewBag.ID })
</form>