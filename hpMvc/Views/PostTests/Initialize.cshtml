@{
	ViewBag.Title = "Initialize";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@Url.Content("~/Content/PostTestsStart.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/PostTestsStart.js")" type="text/javascript"></script>

<h2>Post-Tests</h2>
<p>
	Your name will be used to track your test results.
</p>

<form method="post" action="">    
	<div id="listName">
		If your role is other than Nurse or you are a nurse and have are already created a name for testing, select your name from the list and click on 'Start Testing'.
		<br /><br />
		@Html.DropDownList("Users") &nbsp;&nbsp; <input type="button" id="btnStart" value="Start Testing" />
        <input type="hidden" id="ID" name="ID" />
	</div>
		  
	<div id="divName">
		<label class="fieldLabel">First Name:</label><input type="text" id="firstName" name="firstName" /><br />
		<label class="fieldLabel">Last Name:</label><input type="text" id="lastName" name="lastName" /><br />
        <label class="fieldLabel">Email:</label><input type="text" id="email" name="email" /> 
		<div id="siteSpecific">            
			<label class="fieldLabel">Employee ID:</label><input type="text" id="empID" name="empID" />
			<span id="empIDmessage">&nbsp;(You must enter a @ViewBag.EmpIDMessage)</span>            
		</div>        
		<input type="button" id="btnCreate" value="Create Name For Testing" />
		<input id="empIDRequired" value="@ViewBag.EmpIDRequired" name="empIDRequired" type="hidden"/>
		<input id="empIDRegex" value="@ViewBag.EmpIDRegex" name="empIDRegex" type="hidden"/>
		<input id="empIDMessage" value="@ViewBag.EmpIDMessage" name="empIDMessage" type="hidden"/>
		
	</div>
	<div id="divClickHere">
		<br />
		<a id="clickHere" href="#"><strong>Click here</strong></a> <span id="spanClickHere">&nbsp; if you are a nurse have not previously created a name.</span> 
	</div>

	<div id="testMenu">
		<hr />
		<h3>List of tests</h3>
		<p>
			A checkmark <img src="@Url.Content("~/Content/images/check2.jpg")" alt="" /> (and the date completed) prepended to a test indicates completed.
		</p>
		<ul>
			<li id="Overview"><a href="#" class="aLnk">Overview Post-Test</a></li>
			<li id="Checks"><a href="#" class="aLnk">CHECKS Post-Test</a></li>	        
			<li id="Medtronic"><a href="#" class="aLnk">Medtronic Enlite Post-Test</a></li>
			<li id="NovaStatStrip"><a href="#" class="aLnk">NovaStatStrip Post-Test</a></li>
			<li id="VampJr"><a href="#" class="aLnk">VampJr Post-Test</a></li>
		</ul>
		<br /><br />
		Click submit after you have completed all required tests 
		<br />Enter your email address &nbsp; <input type="text" id="sEmail" name="sEmail" />
		&nbsp; &nbsp; 
		<input type="button" id="btnSubmit" value="Submit" />
		<img alt="" id="waitGif" src="@Url.Content("~/Content/images/wait.gif")" />
	</div>
	<br />
	@Html.ActionLink("Back to Staff - Main Menu", "Index", "Staff")
</form>