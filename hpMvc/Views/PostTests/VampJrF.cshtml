@{
    ViewBag.Title = "VampJr";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/Posttest.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/PostTest.js")" type="text/javascript"></script>

<h2>Online Videos and Testing - VampJr</h2>
<hr/>
<form action="" method="post">
    @Html.Hidden("name", (object)@ViewBag.Name)
    @Html.Hidden("id", (object)@ViewBag.ID)
    @Html.Hidden("test", (object)@ViewBag.Test)
    @Html.Hidden("completed", (object)@ViewBag.Completed)
    <p id="testIntro">
        After viewing the video, click on the 'Take the test' link (below the video). You must answer all questions correctly.
    </p>
    @*<iframe src="//player.vimeo.com/video/36693991?title=0&amp;byline=0&amp;portrait=0"
        width="533" height="300"
        frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>*@
    <iframe src="https://player.vimeo.com/video/139507953" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    <p>
        Module 5: Vamp Jr.
    </p>
    <a href="" id="showHideTest">Take the test</a>
    <div id="testForm">
        <div class="question">
            1) <span class="questionText"> Durant l'amorçage du système VAMP Jr.: </span>
        </div>
        <br />
        <div class="answer">
            <span class="spanswer"> a) </span> <input type="radio" name="question1" value="a" />  Je garde la vanne d'arrêt dans la position ouverte et je garde le site d'échantillonnage en
            <br /><span class="answerTextOver">bas du réservoir VAMP Jr. à un angle de 45 degrés</span>
        </div>
        <br />
        <div class="answer">
            <span class="spanswer"> b) </span> <input type="radio" name="question1" value="b" />  Je garde la vanne d'arrêt en position fermée et je garde le site d'échantillonnage en haut
            <br /><span class="answerTextOver">du réservoir VAMP Jr. à un angle de 90 degrés</span>
        </div>
        <br />
        <div class="answer">
            <span class="spanswer"> c) </span> <input type="radio" name="question1" value="c" />  Je garde la vanne d'arrêt dans la position ouverte et tiens le site d'échantillonnage en
            <br /><span class="answerTextOver">haut du réservoir VAMP Jr. à un angle de 45 degrés</span>
        </div>
        <br />
        <div class="question">
            2) <span class="questionText"> Lors d’une prise de l’échantillon de la VAMP Jr., je joins d’abord la canule au site de</span>
            <br /><span class="questionTextOver"> l'échantillon, puis je joins la seringue à la canule</span>

        </div>
        <br />
        <div class="answer">
            <input type="radio" name="question2" value="Yes" />  <span>Oui</span>
        </div>
        <br />
        <div class="answer">
            <input type="radio" name="question2" value="No" />  Non
        </div>
        <br />
        <div class="question">
            3) <span class="questionText"> Lors du retrait de la seringue du site de l'échantillon, je tire tout droit, tenant la canule</span>
        </div>
        <br />
        <div class="answer">
            <input type="radio" name="question3" value="Yes" />  <span>Oui</span>
        </div>
        <br />
        <div class="answer">
            <input type="radio" name="question3" value="No" />  Non
        </div>
        <br />
        <input type="button" id="btnSubmit" value="Submit Answers" />
    </div>
    <br />
    @Html.ActionLink("Back to tests menu", "Initialize", new { Controller = "PostTests", id = @ViewBag.ID })
</form>
