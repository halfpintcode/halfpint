@{
    ViewBag.Title = "NovaStatStrip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@Url.Content("~/Content/Posttest.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/PostTest.js")" type="text/javascript"></script>

<h2>Online Modules and Testing - Nova StatStrip</h2>
<hr />
<form action="" method="post">    
    <input id="name" name="name" type="hidden" value='@ViewBag.Name'/>
    <input id="id" name="id" type="hidden" value='@ViewBag.ID'/>
    <input id="test" name="test" type="hidden" value='@ViewBag.Test'/>
    <input id="completed" name="completed" type="hidden" value='@ViewBag.Completed'/>
    <p id="testIntro">
        After viewing the video, click on the 'Take the test' link (below the video). You must answer all questions correctly.
    </p>    
    <iframe src="//player.vimeo.com/video/35996343?title=0&amp;byline=0&amp;portrait=0" 
			width="533" height="300" 
			frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen>
	</iframe>
	<p>
		Module 2: Nova StatStrip
	</p>
    <a href="" id="showHideTest">Take the test</a>    
    <div id="testForm">
        <div class="question">
            1) <span class="questionText"> I can use any glucometer to check the blood glucose of a patient who is a randomized HALF-PINT subject</span> 
        </div>
        <br />
        <div class="answer">
            <input type="radio" name="question1" value="Yes" />  <span>Yes</span>            
        </div>
        <div class="answer">  
            <input type="radio" name="question1" value="No" />  No
        </div>
        <br />
        <div class="question">
            2) <span class="questionText"> To obtain a blood glucose measurement, I first apply the blood sample to the test strip then insert the </span> 
               <br /><span class="questionTextOver"> strip into the glucometer</span>
        </div>
        <br />
        <div class="answer">
            <input type="radio" name="question2" value="Yes" />  <span>Yes</span>            
        </div>
        <div class="answer">  
            <input type="radio" name="question2" value="No" />  No
        </div>
        <br />
        <div class="question">
            3) <span class="questionText"> If the test strip does not fill completely, I should touch the test strip to the blood droplet a second time</span> 
               <br /><span class="questionTextOver"> to get an accurate result</span>
        </div>
        <br />
        <div class="answer">
            <input type="radio" name="question3" value="Yes" />  <span>Yes</span>            
        </div>
        <div class="answer">  
            <input type="radio" name="question3" value="No" />  No
        </div>
         <br />
        <input type="button" id="btnSubmit" value="Submit Answers" /> 
    </div>
    <br />
    @Html.ActionLink("Back to tests menu", "Initialize", new { Controller = "PostTests", id = @ViewBag.ID })
</form>