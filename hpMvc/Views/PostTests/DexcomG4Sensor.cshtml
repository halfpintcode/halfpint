@{
    ViewBag.Title = "Dexcom G4 Sensor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@Url.Content("~/Content/Posttest.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/PostTest.js")" type="text/javascript"></script>

<h3>Online Videos and Testing - Dexcom G4 Sensor</h3>
<hr/>
<p id="testIntro">
    After viewing the video, click on the 'Take the test' link (below the video). You must answer all questions correctly.
</p>
<iframe src="//player.vimeo.com/video/57858264?title=0&amp;byline=0&amp;portrait=0" 
                            width="533" height="300" 
                            frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen>
</iframe>
<p>
    Dexcom G4 Sensor Video
</p>

<div>
    <a href="" id="showHideTest">Take the test</a>    
</div>

<div id="testForm">
    <form action="" method="post">
        @Html.Hidden("name", (object)@ViewBag.Name);
    @Html.Hidden("id", (object)@ViewBag.ID);
    @Html.Hidden("test", (object)@ViewBag.Test);
    @Html.Hidden("completed", (object)@ViewBag.Completed);

        <div class="question">
            1) <span class="questionText"> The proper sequence after cleaning of the sensor site is: </span>
        </div>
        <br />
        <div class="answer">
            <span class="spanswer"> a) </span> <input type="radio" name="question1" value="a" />  Removal of safety, application of adhesive pad, pushing down on applicator barrel, pulling up on  
            <br /><span class="answerTextOver">collar</span> 
        </div>
        <br/>
        <div class="answer">  
            <span class="spanswer"> b) </span> <input type="radio" name="question1" value="b" />  Application of adhesive pad, removal of safety, pushing down on applicator barrel, pulling up on collar 
            <br /><span class="answerTextOver"></span>
        </div>
        <br/>
        <div class="answer">
            <span class="spanswer"> c) </span> <input type="radio" name="question1" value="c" />  Application of adhesive pad, removal of safety, pulling up collar, pushing down on applicator 
            <br /><span class="answerTextOver">barrel</span>   
        </div>
        <br />
        <div class="question">
            2) <span class="questionText"> To remove the applicator barrel following sensor insertion I need to: </span>
        </div>
        <br />
        <div class="answer">
            <span class="spanswer"> a) </span> <input type="radio" name="question2" value="a" />  Rock the barrel forward
            <br /><span class="answerTextOver"></span>            
        </div>
        <br/>
        <div class="answer">  
            <span class="spanswer"> b) </span> <input type="radio" name="question2" value="b" />  Rock the barrel backward
            <br /><span class="answerTextOver"></span>
        </div>
        <br />
        <div class="question">
            3) <span class="questionText"> To securely attach the transmitter I will: </span>
        </div>
        <br />
        <div class="answer">
            <span class="spanswer"> a) </span> <input type="radio" name="question3" value="a" />  Push the transmitter latch backward, ensuring the transmitter is level and secure between the two  
            <br /><span class="answerTextOver">side tabs, leaving the latch in place</span>            
        </div>
        <br />
        <div class="answer">  
            <span class="spanswer"> b) </span> <input type="radio" name="question3" value="b" />  Push the transmitter latch forward, ensuring the transmitter is level and secure between the two side 
            <br /><span class="answerTextOver">tabs, then dispose of the latch</span>
        </div>
        <br />
        
        <input type="button" id="btnSubmit" value="Submit Answers" />
    </form>
</div>
@Html.ActionLink("Back to tests menu", "Initialize", new { Controller = "PostTests", id = @ViewBag.ID })
