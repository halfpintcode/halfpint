@model hpMvc.Models.StaffEditModel
@{
    ViewBag.Title = "UpdateStaffInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Staff Information</h2>

<div id="divSelects">
    <span class="spnMain">Select a member:&nbsp;</span>@Html.DropDownList("Users")
    <br />
    <input id="SiteID" name="SiteID" type="hidden" value='@ViewBag.Site' />
    <input id="IsValid" name="IsValid" type="hidden" value='@ViewBag.IsValid' />
    <input id="empIDRequired" value='@ViewBag.EmpRequired' name="empIDRequired" type="hidden"/>
	<input id="empIDRegex" value='@ViewBag.EmpRegex' name="empIDRegex" type="hidden"/>
	<input id="empIDMessage" value='@ViewBag.EmpMessage' name="empIDMessage" type="hidden"/>
    <input id="phoneFormat" value='@ViewBag.PhoneFormat' name="phoneFormat" type="hidden" />
    <input id="phoneMessage" value='@ViewBag.PhoneMessage' name="phoneMessage" type="hidden" />
</div>

<div id="staffInfo">
    @if(ViewBag.IsValid == "false")
    {
        { Html.RenderPartial("UpdateStaffPartial"); }
    }  
</div>



<link href="@Url.Content("~/Content/AddNewStaff.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.maskedinput-1.3.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/UpdateStaffInfo.js")" type="text/javascript"></script>
