@{
    ViewBag.Title = "Post Tests Service - Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Post Tests Service - Report</h2>
<form action="" method="POST">
    <div id="accordion">
        <h5><a href="#">Execute as service</a>
        </h5>
        <div>
            <input type="radio" name="emailParam" value="noEmails" checked="checked" />Create
            list but do not send emails
            <br />
            <input type="radio" name="emailParam" value="coordinatorEmails" />Create list and
            send coorinator emails only
            <br />
            <input type="radio" name="emailParam" value="forceEmails" />Create list and send staff
            and coordinator emails
            <br />
        </div>
        <h5><a href="#">Execute as report</a></h5>
        <div>
            <div id="divSelects">
                <span class="spnMain">Select a site:&nbsp;</span> @Html.DropDownList("Sites")
                <br />
            
            </div>
        </div>
    </div>
    <input type="hidden" name="runType" id="runType"/>
    <input type="hidden" name="siteId" id="siteId"/>
    <br />
    <input type="button" id="btnSubmit" value="Submit" />
</form>
<link href="@Url.Content("~/Content/postTestsService.css")" rel="stylesheet">
<script src="@Url.Content("~/Scripts/PostTestsService.js")" type="text/javascript"></script>
