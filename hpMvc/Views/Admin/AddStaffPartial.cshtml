@model hpMvc.Models.StaffModel
           
<form id="newForm" action="" method="post" >
    <input id="SiteID" name="SiteID" type="hidden" />
    <input id="Role" name="Role" type="hidden" />
    <input id="empIDRequired" value="" name="empIDRequired" type="hidden"/>
	<input id="empIDRegex" value="" name="empIDRegex" type="hidden"/>
	<input id="empIDMessage" value="" name="empIDMessage" type="hidden"/>
    
    @Html.ValidationSummary(true, "Subject completion was unsuccessful. Please correct the errors and try again.")
    <fieldset>
        <legend>New @ViewBag.Type Information</legend>        
        
        <label>Study role:</label> @Html.DropDownList("Roles") @Html.ValidationMessageFor(m => m.Role)
        &nbsp;&nbsp;&nbsp;&nbsp;
        @Html.EditorFor(m => m.SendEmail) <span class="spanChk">Send notification to new user</span>
        <br />
        <label class="lblMain">User Name</label> @Html.EditorFor(m => m.UserName) @Html.ValidationMessageFor(m => m.UserName) 
        <br />        
        <label class="lblMain">First Name</label> @Html.EditorFor(m => m.FirstName) @Html.ValidationMessageFor(m => m.FirstName)
        <br />
        <label class="lblMain">Last Name</label> @Html.EditorFor(m => m.LastName) @Html.ValidationMessageFor(m => m.LastName)
        <br />
        <label class="lblMain">Email</label> @Html.EditorFor(m => m.Email) @Html.ValidationMessageFor(m => m.Email)                
        <br />
        <label class="lblMain">Phone</label> @Html.EditorFor(m => m.Phone) @Html.ValidationMessageFor(m => m.Phone)                        
        <div id="siteSpecific">            
			<label class="lblMain">EmployeeID</label> @Html.EditorFor(m => m.EmployeeID) @Html.ValidationMessageFor(m => m.EmployeeID)
			<span id="empIDmessage"></span>            
		</div>
        <br />
        @Html.EditorFor(m => m.NovaStatStrip) <span class="spanChk">Nova Stat Strip</span>
        <label class="lblDoc">Date Completed:</label>  @Html.EditorFor(m => m.NovaStatStripDoc) 
        <br />
        @Html.EditorFor(m => m.Vamp) <span class="spanChk">VAMP</span>
        <label class="lblDoc">Date Completed:</label>  @Html.EditorFor(m => m.VampDoc) 
        <br />
        @Html.EditorFor(m => m.Cgm) <span class="spanChk">CGM Sensor Insertion</span>
        <label class="lblDoc">Date Completed:</label>  @Html.EditorFor(m => m.CgmDoc) 
        <br />
        @Html.EditorFor(m => m.Inform) <span class="spanChk">Inform Training</span>
        <label class="lblDoc">Date Completed:</label>  @Html.EditorFor(m => m.InformDoc) 
        <br />
        @Html.EditorFor(m => m.OnCall) <span class="spanChk">On-Call</span>
        <label class="lblDoc">Date Completed:</label>  @Html.EditorFor(m => m.OnCallDoc) 
        <br />
        @Html.EditorFor(m => m.HumanSubj) <span class="spanChk">Human Subjuct Training</span>
        <label class="lblDoc">Date Started:</label>  @Html.EditorFor(m => m.HumanSubjStart) 
        <label class="lblDoc">Date Expired:</label>  @Html.EditorFor(m => m.HumanSubjExp) 
        <br />
    </fieldset>
    <br /><input type="submit" id="btnSubmit" value="Save" />&nbsp;&nbsp;&nbsp;<input type="button" id="btnClose" value="Cancel" />
</form>
