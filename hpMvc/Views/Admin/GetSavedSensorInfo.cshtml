@{
    ViewBag.Title = "GetSavedSensorInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Download a Saved Sensor File</h2>

<div>
    @if (@ViewBag.Role == "Admin")
    {
        <span>Select a site:&nbsp;</span> @Html.DropDownList("Sites")
        <br /><br />
    }
    <span>Select a sensor file: </span>&nbsp; @Html.DropDownList("Files") &nbsp;&nbsp; <input type="button" id="btnDownload" value="Download" />
    <br /><br />
            
</div>

<script src="@Url.Content("~/Scripts/GetSavedSensorInfo.js")" type="text/javascript"></script>
