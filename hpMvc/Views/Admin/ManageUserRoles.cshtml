@model hpMvc.Models.UserRolesModel
@{
    ViewBag.Title = "Manage User Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage User Roles for user: @Model.UserName</h2>
<form action="" method="post" id="form1">
    @Html.HiddenFor(m => m.UserName)
    <table>
        <tr>
            <th>
                Roll
            </th>
            <th>
                Assigned
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.UserRoles)
        {
            var ischecked = "";
            if (item.IsAssigned)
            {
                ischecked = "checked";
            }
        
            <tr>
                <td>
                    @Html.Label(item.RoleName)
                </td>

                <td>
            
                    <input type="radio" @ischecked id='@item.RoleName' name='selectedRoles' value='@item.RoleName' />
                </td>
        
            </tr>

        }
    </table>

    <div>
        <button type="button" id="btnSave" >Save</button>  <img alt="" id="waitGif" src="@Url.Content("~/Content/images/wait.gif")" />
    </div>    
    <div>
        @Html.RouteLink("Back to Admin Backdoor", new { Action = "Index", Controller = "AdminBackDoor" })        
    </div>
</form>
<script src="@Url.Content("~/Scripts/ManageUserRoles.js")" type="text/javascript"></script>
