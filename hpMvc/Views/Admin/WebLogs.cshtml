@model List<hpMvc.Models.WebLog>
@{
    ViewBag.Title = "Web Logs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Web Logs</h2>
<div>

@{    
    var grid = new WebGrid(Model, defaultSort: "logDate", rowsPerPage: 50 );
}

@grid.GetHtml(tableStyle: "webgrid", headerStyle: "header", alternatingRowStyle: "alt")
</div>

<link href="@Url.Content("~/Content/ShowWebLogs.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/webgrid.css")" rel="stylesheet" type="text/css" />